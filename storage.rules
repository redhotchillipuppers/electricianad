rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             firestore.exists(/databases/(default)/documents/users/$(request.auth.uid)) &&
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role in ['admin', 'superadmin'];
    }

    // Quote photos - anyone can upload when submitting a quote
    match /quotes/{quoteId}/{fileName} {
      // Anyone can upload images for quotes (public submission)
      allow create: if request.resource.size < 10 * 1024 * 1024  // 10MB limit
                    && request.resource.contentType.matches('image/.*');  // Images only

      // Anyone can read quote photos
      allow read: if true;

      // Only admins can update or delete
      allow update, delete: if isAdmin();
    }

    // Provider certifications - anyone can upload when applying
    match /providers/{providerId}/{fileName} {
      // Anyone can upload files for provider applications (public submission)
      allow create: if request.resource.size < 10 * 1024 * 1024  // 10MB limit
                    && (request.resource.contentType.matches('image/.*')  // Images
                        || request.resource.contentType.matches('application/pdf'));  // PDFs

      // Anyone can read provider certifications
      allow read: if true;

      // Only admins can update or delete
      allow update, delete: if isAdmin();
    }

    // Deny access to all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
